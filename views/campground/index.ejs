<% include ../partials/header %>


<div class="container">
  <header class="jumbotron">
    <div class="container"
      <h1>Welcome to the Campgrounds Page </h1>
      <p>See best campgrounds all over the world</p> 
      <p>
       <a class="btn btn-primary btn-large" style="color:#ffffff" href="/campgrounds/new">Add New CampGrounds!</a>
      </p>
      </div>  
  </header>

    <div class="container row text-center">
        <h3 style="color:red"><%=message %></h3> 
    </div>

  <div class="row text-center" style="display:flex; flex-wrap:wrap">
    <% campground.forEach(function(campgrounds){ %>
      <div class="col-md-3 col-sm-6">
        <div class="thumbnail">
          <img src="<%= campgrounds.image %>">
          <div class="caption">
              <h4><%= campgrounds.name %></h4>
          </div>
          <a class="btn btn-primary" href="/campgrounds/<%=campgrounds._id %>">More Info</a>
        </div>  
      </div>
    <% }) %>
    </div>
</div> 


